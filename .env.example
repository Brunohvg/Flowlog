# ==========================================
# CONFIGURAÇÕES GERAIS
# ==========================================
SECRET_KEY=sua-chave-secreta-aqui-mude-isso
DEBUG=False
ALLOWED_HOSTS=flowlog.seudominio.com.br
CSRF_TRUSTED_ORIGINS=https://flowlog.seudominio.com.br

# ==========================================
# URL DO SITE (para links de rastreamento)
# ==========================================
SITE_URL=https://flowlog.seudominio.com.br

# ==========================================
# BANCO DE DADOS
# ==========================================
# Para desenvolvimento local com SQLite:
# USE_SQLITE=True

# Para produção com PostgreSQL:
USE_SQLITE=False
DB_NAME=flowlog
DB_USER=flowlog
DB_PASSWORD=sua-senha-segura
DB_HOST=postgres
DB_PORT=5432

# ==========================================
# INTEGRAÇÃO WHATSAPP (Evolution API)
# IMPORTANTE: URL e KEY são GLOBAIS do sistema
# Cada tenant criará sua própria instância
# ==========================================
EVOLUTION_API_URL=https://api.seudominio.com.br
EVOLUTION_API_KEY=seu-token-global-da-evolution-api

# NÃO COLOQUE EVOLUTION_INSTANCE aqui!
# Cada tenant cria sua própria instância na interface

# ==========================================
# CELERY + REDIS
# ==========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
